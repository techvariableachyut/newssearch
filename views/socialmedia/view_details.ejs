<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ../partials/head.ejs %>
  </head>
  <body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <%- include ../partials/header.ejs %>
    <div class="app-body">
      <div class="sidebar">
        <%- include ../partials/nav.ejs %>
      </div>
      <main class="main">
        <!-- Breadcrumb-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">Home</li>
          <li class="breadcrumb-item">
            <a href="#">Admin</a>
          </li>
          <li class="breadcrumb-item active">Create Social Media App</li>
          <!-- Breadcrumb Menu-->
         
        </ol>
        <div class="container-fluid">
            <div class="col-sm-7">
                <div class="card">
                  <div class="card-header">
                    <strong>Add Social Media Site</strong>
                  </div>
                  <div class="card-body">
                    <div class="form-group">
                      <label for="company"> Media Sites Site</label>
                        <select class="form-control" id="site">
                          <option>Facebook</option>
                          <option>Instagram</option>
                          <option>Twitter</option>
                          <option>Reddit</option>
                          <option>Youtube</option>
                        </select>
                    </div>
                    <div class="form-group">
                      <label for="vat">App Name</label>
                      <input class="form-control" id="vat" type="text" disabled="disabled" value=<%= Items.appname %> >
                    </div>

                    <div class="form-group">
                        <label for="vat">Description</label>
                        <textarea class="form-control" name="" id="" cols="30" disabled="disabled" rows="5"><%= Items.appdesc %></textarea>
                    </div>

                  </div>
                  <div class="card-footer">
                      <button class="btn btn-sm btn-primary" type="submit">
                        <i class="fa fa-dot-circle-o"></i> Next</button>
                      
                  </div>
                </div>
              </div>
        </div>
      </main>
      <aside class="aside-menu">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#settings" role="tab">
                <i class="icon-settings"></i>
              </a>
            </li>  
          </ul>
          <!-- Tab panes-->
          <div class="tab-content">
  
            <div class="tab-pane p-3 active" id="settings" role="tabpanel">
                <h6></h6>
                <div class="aside-options">
                  <div class="clearfix mt-4">
                    <small>
                      <b>Twitter</b>
                    </small>
                  </div>
                </div>
  
                <hr>
                <h6>Configuration</h6>
                <br>
                
                <form class="form-horizontal" action="" method="post">
                  <div class="form-group row">
                    <div class="col-md-3">
                        Consumer Key
                    </div>
                    <div class="col-md-7">
                        <input class="form-control" type="text" placeholder="Consumer Key"> 
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-block btn-outline-primary" type="button">Add</button>
                    </div>
                  </div>

                  <div class="form-group row">
                      <div class="col-md-3">
                          Consumer Secret
                      </div>
                      <div class="col-md-7">
                        <input class="form-control" type="text" placeholder="Consumer Secret"> 
                      </div>
                      <div class="col-md-2">
                          <button class="btn btn-block btn-outline-primary" type="button">Add</button>
                      </div>
                  </div>
                  <div class="form-group row">
                      <div class="col-md-3">
                          Access Token
                      </div>
                      <div class="col-md-7">
                          <input class="form-control" type="text" placeholder=" Access Token"> 
                        </div>
                      <div class="col-md-2">
                          <button class="btn btn-block btn-outline-primary" type="button">Add</button>
                      </div>
                  </div>

                  <div class="form-group row">
                      <div class="col-md-3">
                          Access Token Secret
                      </div>
                      <div class="col-md-7">
                          <input class="form-control" type="text" placeholder="Access Token Secret"> 
                        </div>
                      <div class="col-md-2">
                          <button class="btn btn-block btn-outline-primary" type="button">Add</button>
                      </div>
                  </div>

                </form>  
            </div>
  
            <div class="tab-pane p-3" id="twitter" role="tabpanel">
                <h6>Twitter</h6>
                <div class="aside-options">
                  <div class="clearfix mt-4">
                    <small>
                      <b>Add Twitter</b>
                    </small>
                    <label class="switch switch-3d switch-primary float-right">
                        <input class="switch-input" type="checkbox" >
                        <span class="switch-slider"></span>
                    </label>
                  </div>
                </div>
  
                <hr>
                <h6>Configuration</h6>
                <div class="text-uppercase mb-1 mt-4">
                  <small>
                    <b>Add keywords</b>
                  </small>
                  <i class="icon-plus float-right"> Add </i>
                </div>
                <br>
                
                <form class="form-horizontal" action="" method="post">
                  <div class="form-group row">
                    <div class="col-md-8">
                      <input class="form-control" type="text" placeholder="Add keyword">
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-block btn-outline-primary" type="button">Add</button>
                    </div>
                  </div>
                </form>  
            </div>
  
          </div>
          <div class="aside-footer">
            <div class="p-3 float-right">
                <a href="/social-media/app/update/<%= Items.id %>">
                    <button class="btn btn-lg btn-primary" type="button">Update?</button>
                </a> 
            </div>
          </div>
  
      </aside>

    </div>
    <%- include ../partials/footer.ejs %>
    <%- include ../partials/scripts.ejs %>



    
  </body>
</html>